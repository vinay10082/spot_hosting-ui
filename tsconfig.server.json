{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "./out-tsc/server",
    "target": "ES2022",
    "types": ["node"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true
  },
  "files": [
    "src/main.server.ts",
    "src/server.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/test.ts"
  ]
}